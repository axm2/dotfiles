[colors]
background = #212121
foreground = #FFFFFF
primary = #FFCB6B

[bar/primary]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 22

font-0=tewi:pixelsize=11;
font-1=siji:pixelsize=10;

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 1

module-margin = 2
modules-left = bspwm
modules-right =alsa backlight wireless-network ping weather temperature battery date
modules-center = title

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC
format-discharging = <ramp-capacity><label-discharging>
format-charging = <label-charging>
ramp-capacity-0=ÓÄ∏
ramp-capacity-1=ÓÄπ
ramp-capacity-2=ÓÄ∫
ramp-capacity-3=ÓÄª
label-charging = Óàï %percentage%%
[module/date]
type = internal/date

label = %date% %time%

date = %a %b %e
time = %H:%M

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
index-sort = true

label-mode = %index%
label-mode-padding = 1
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.primary}

label-focused = %index%
label-focused-padding = ${module/bspwm.label-mode-padding}
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.foreground}

label-unfocused = %index%
label-unfocused-padding = ${module/bspwm.label-mode-padding}

label-visible = %index%
label-visible-padding = ${module/bspwm.label-mode-padding}

label-urgent = %index%
label-urgent-padding = ${module/bspwm.label-mode-padding}
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.primary}

[module/ping]
type = custom/script

exec = ping 1.1.1.1 -n -c 1 | grep -oP "(?<=time=)[0-9\.]* ms"
interval = 1

[module/wired-network]
type = internal/network
interface = eth0

[module/wireless-network]
type = internal/network
interface = wlan0
format-connected = <ramp-signal>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss>
label-disconnected = not connected
ramp-signal-0 = Óàò
ramp-signal-1 = Óàô
ramp-signal-2 =ÓÜØ
ramp-signal-3 = Óàö

animation-packetloss-0 = ‚ö†
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = üì∂
animation-packetloss-1-foreground = #000000
; Framerate in milliseconds
animation-packetloss-framerate = 500

[module/weather]
type = custom/script 

exec = ~/.config/polybar/weather.sh
interval = 3600

[module/alsa]
type=internal/alsa
format-volume=<ramp-volume>
label-muted=muted
ramp-volume-0 = ÓÅë
ramp-volume-1 = ÓÅì
ramp-volume-2 = ÓàÉ
ramp-headphones-0=0h
ramp-headphones-1=1h

[module/backlight]
type=internal/backlight
card=intel_backlight
format=<label>
label = ÓâÆ%percentage%


[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
;label-warn-foreground = ${colors.secondary}

ramp-0= x
ramp-1 = y
ramp-2 = z

;ramp-foreground= ${colors.secondary}

[module/title]
type = internal/xwindow

label= %title%
label-maxlen=50

